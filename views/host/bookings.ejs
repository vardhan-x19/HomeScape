<%- include('../partials/head')%>
<body>
  <%- include('../partials/nav')%>
  <% if(registerHomes.length >= 1) { %>
    <h3 class="text-center mt-3 font-semibold text-red-700 px-5 py-3">The Bookings are:</h3>
  <% } %>

  <div class=" px-6 py-4 ">
    <% if(registerHomes.length >= 1) { %>
      <% registerHomes.forEach(home => { %>
        <div class="  bg-white shadow-lg rounded-lg p-6 hover:bg-gray-100 transition duration-300  md:w-1/2 mx-auto  ">
          <!-- Image -->
          <img  src=<%= home.imgUrl %> alt="Home image" class="w-[60%] h-[40%] object-cover rounded-t-lg mb-4">

          <!-- Home details -->
          <h4 class="text-lg font-semibold mb-2"><%= home.name %></h4>
         
          <p class="text-red-700 font-semibold  mb-1">House Name:
           <span class="text-black font-semibold"> <%= home.houseName %></span> </p>
           <p class="text-red-700 font-semibold  mb-1">Location:
            <span class="text-black font-semibold"> <%= home.location %></span> </p>

            <p class="text-red-700 font-semibold  mb-1">Price:
              <span class="text-black font-semibold"> <%= home.price %></span> </p>
              <p class="text-red-700 font-semibold  mb-1">Description:
                <span class="text-black font-semibold"> <%= home.desc %></span> </p>
                <div class="flex">
                  <a class="bg-green-800 mt-2 mr-1 text-white font-semibold rounded-md p-2" href="/deleteBooking/<%=home._id%>">remove</a>
                  <a href="/home/<%=home.id %>">  
                    <button class="bg-green-800 rounded-md text-white font-semibold mt-2 p-2">details</button>
                  </a>
                </div>
                
       
        </div>
      <% }) %>
    <% } else { %>
      <div class="text-gray-500 text-center p-4 w-full md:w-1/2 mx-auto">No homes available.</div>
    <% } %>
  </div>
</body>
</html>
