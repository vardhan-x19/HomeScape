<%- include('../partials/head')%>
<body>
  <%- include('../partials/nav')%>
  <% if(registerHomes.length >= 1) { %>
    <h1 class="text-center mt-2 p-5 text-lg  font-semibold tracking-wide">
      Welcome to HomeScape
    </h1>
  <% } %>
    <!-- Hero Section -->
    <div class="relative w-full h-screen">
      <!-- Background Image -->
      <img 
        src="/Images/10.jpg" 
        alt="Airbnb Background" 
        class="absolute inset-0 w-full h-full object-cover">
      
      <!-- Overlay -->
      <div class="absolute inset-0 bg-black bg-opacity-40"></div>
      
      <!-- Content -->
      <div class="relative flex flex-col justify-center items-center h-full text-white px-4 text-center">
        <h1 class="text-5xl md:text-7xl font-bold tracking-wide">
          Welcome to HomeScape
        </h1>
        <p class="mt-4 text-lg md:text-2xl max-w-2xl">
          Find your next adventure. Unique stays and experiences are waiting for you.
        </p>
        <button 
          class="mt-6 bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-6 rounded-lg text-lg shadow-md">
          Explore Stays
        </button>
      </div>
    </div>
    <div class=" px-6 py-4 ">
      <% if(registerHomes.length >= 1) { %>
        <% registerHomes.forEach(home => { %>
          <div class="  bg-white shadow-lg rounded-lg p-6 hover:bg-gray-100 transition duration-300  md:w-1/2 mx-auto  ">
            <!-- Image -->
            <img  src=<%= home.imgUrl %> alt="Home image" class="w-[60%] h-[50%] object-cover rounded-t-lg mb-4">
  
            <!-- Home details -->
            <h4 class="text-lg font-semibold mb-2"><%= home.name %></h4>
           
            <p class="text-red-700 font-semibold  mb-1">House Name:
             <span class="text-black font-semibold"> <%= home.houseName %></span> </p>
             <p class="text-red-700 font-semibold  mb-1">Location:
              <span class="text-black font-semibold"> <%= home.location %></span> </p>
  
              <p class="text-red-700 font-semibold  mb-1">Price:
                <span class="text-black font-semibold"> <%= home.price %></span> </p>
                <p class="text-red-700 font-semibold  mb-1">Description:
                  <span class="text-black font-semibold"> <%= home.desc %></span> </p>
                  <div class="flex">
                    <form action="/bookingCheck/:<%= home._id%>" method="post">
                      <button type="submit" class="bg-green-800 mt-2 mr-1 text-white font-semibold rounded-md p-2">book</button>
                     </form> 
                      <a href="/home/:<%=home.id %>">  <button class="bg-green-800 mt-2 ml-4 rounded-md text-white font-semibold p-2">details</button></a>
                  </div>
         
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-gray-500 text-center p-4 w-full md:w-1/2 mx-auto">No homes available.</div>
      <% } %>
    </div>
</body>
</html>
